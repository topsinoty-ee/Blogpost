{
  "extends":"../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node", "graphql"],
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "@models/*": ["src/models/*"],
      "@types/*": ["src/types/*"]
    },
  },
  "include": ["src/**/*", "src/**/*.graphql.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
